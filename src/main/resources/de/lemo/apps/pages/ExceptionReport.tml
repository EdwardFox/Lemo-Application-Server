<html t:type="layoutdashboard" title="LeMo | ${message:exceptionTitle}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
	
		<div class="row-fluid">
			<div class="span12">
				<div class="row-fluid">
					<div class="span12">
						<h3>${message:exceptionTitle} </h3>
						<br />
						<p>
						 	<h4>${message:exceptionMessage}:</h4>
						</p>
						<p>
						 	${error}
						</p>
						<br />
						
						<p>
						 	<b>${message:exceptionHelp}</b>
						</p>
						<br />
						<t:pagelink class="btn btn-primary" page="data/dashboard">${message:dashboardTitle}</t:pagelink>
						<br />
						<br />
						<br />
					</div>
				</div>
			</div>
		</div>
</html>